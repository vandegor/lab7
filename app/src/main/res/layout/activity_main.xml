<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adam.lab7.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/postEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onPostEntry"
            android:text="post Entry" />

        <Button
            android:id="@+id/getEntries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onGetEntries"
            android:text="get Entries" />

        <Button
            android:id="@+id/getEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onGetEntry"
            android:text="get Entry" />

        <Button
            android:id="@+id/putEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onPutEntry"
            android:text="put Entry" />

        <Button
            android:id="@+id/deleteEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onDeleteEntry"
            android:text="delete Entry" />

        <Button
            android:id="@+id/deleteEntries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onDeleteEntries"
            android:text="delete Entries" />

        <Button
            android:id="@+id/putEntryComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onPutEntryComment"
            android:text="put Entry Comment" />

        <Button
            android:id="@+id/getEntryComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onGetEntryComments"
            android:text="get Entry Comments" />

        <Button
            android:id="@+id/deleteEntryComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onDeleteEntryComment"
            android:text="delete Entry Comment" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
